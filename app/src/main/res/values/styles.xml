<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Text" />

    <style name="Text.OnboardingTitle">
        <item name="android:textColor">@color/card_light</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:maxWidth">300dp</item>
    </style>

    <style name="Text.OnboardingSubtitle">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:maxWidth">320dp</item>
    </style>

    <style name="Text.Skip">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <style name="Widget.FoodPlanner.Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="TextAppearance"/>
    <style name="TextAppearance.FoodPlanner" />
    <style name="TextAppearance.FoodPlanner.Display">
        <item name="android:textSize">@dimen/text_display</item>
        <item name="android:fontFamily">@font/nunito_black</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.FoodPlanner.Headline">
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.FoodPlanner.Title">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.FoodPlanner.Body">
        <item name="android:textSize">@dimen/text_body_medium</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

     <style name="TextAppearance.FoodPlanner.Body.Secondary">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.FoodPlanner.Label">
        <item name="android:textSize">@dimen/text_label</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:textSize">@dimen/text_label</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
