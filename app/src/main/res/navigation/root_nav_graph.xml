<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.aalaa.foodplanner.SplashFragment">

        <action
            android:id="@+id/action_splash_to_auth"
            app:destination="@id/auth_graph"/>
        <action
            android:id="@+id/action_splash_to_main"
            app:destination="@id/main_graph"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <include app:graph="@navigation/auth_nav_graph"/>
    <include app:graph="@navigation/main_nav_graph"/>

</navigation>
