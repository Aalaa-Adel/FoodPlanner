<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.aalaa.foodplanner.HomeFragment">

        <action
            android:id="@+id/action_home_to_recipe_detail"
            app:destination="@id/recipeDetailFragment"/>
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.aalaa.foodplanner.SearchFragment"/>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.aalaa.foodplanner.FavoriteFragment"/>

    <fragment
        android:id="@+id/planFragment"
        android:name="com.aalaa.foodplanner.PlanFragment"/>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.aalaa.foodplanner.ProfileFragment"/>

    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="com.aalaa.foodplanner.RecipeDetailFragment"/>

</navigation>
