<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/auth_graph"
    app:startDestination="@id/onboardingFragment">

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.aalaa.foodplanner.OnboardingFragment">

        <action
            android:id="@+id/action_onboarding_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.aalaa.foodplanner.presentation.authentication.view.LoginFragment">

        <action
            android:id="@+id/action_login_to_signup"
            app:destination="@id/signUpFragment" />

        <action
            android:id="@+id/action_login_to_main"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.aalaa.foodplanner.presentation.authentication.view.SignUpFragment">
        <action
            android:id="@+id/action_signup_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_signup_to_main"
            app:destination="@id/mainFragment" />
    </fragment>

</navigation>
