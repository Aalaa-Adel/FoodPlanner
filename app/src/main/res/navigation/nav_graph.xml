<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.aalaa.foodplanner.SplashFragment">

        <action
            android:id="@+id/action_splash_to_onboarding"
            app:destination="@id/onboardingFragment"/>
    </fragment>

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.aalaa.foodplanner.OnboardingFragment">

        <action
            android:id="@+id/action_onboarding_to_login"
            app:destination="@id/loginFragment"/>
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.aalaa.foodplanner.LoginFragment">

        <action
            android:id="@+id/action_login_to_signup"
            app:destination="@id/signUpFragment"/>
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.aalaa.foodplanner.SignUpFragment">

        <action
            android:id="@+id/action_signup_to_login"
            app:destination="@id/loginFragment"/>
    </fragment>

</navigation>
