<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/card_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="14dp"
        android:paddingVertical="16dp"
        android:gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_circle_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/card_stroke_color"
            app:cardBackgroundColor="@color/card_icon_background"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_circle_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/avatar_placeholder" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_flag_icon"
            android:layout_width="72dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/card_stroke_color"
            app:cardBackgroundColor="@color/card_icon_background"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_flag_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:padding="6dp"
                tools:src="@drawable/avatar_placeholder" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_category_name"
            style="@style/TextAppearance.FoodPlanner.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            tools:text="Category Name" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
