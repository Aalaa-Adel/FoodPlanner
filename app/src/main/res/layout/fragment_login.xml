<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_login" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/card_top_rounded"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingTop="40dp"
        android:paddingEnd="24dp"
        android:paddingBottom="32dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/logo" />

        <TextView
            style="@style/TextAppearance.FoodPlanner.Display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/welcom_back"
            android:textColor="@color/auth_text" />

        <TextView
            style="@style/TextAppearance.FoodPlanner.Body.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/login_tagline"
            android:textColor="@color/auth_hint" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/auth_input_bg"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <EditText
                android:id="@+id/et_email"
                style="@style/TextAppearance.FoodPlanner.Body"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@null"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:textColor="@color/auth_text"
                android:textColorHint="@color/auth_hint" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/auth_input_bg"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@id/btn_toggle_password"
                    android:background="@null"
                    android:fontFamily="@font/nunito_regular"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:paddingStart="18dp"
                    android:paddingEnd="44dp"
                    android:textColor="@color/auth_text"
                    android:textColorHint="@color/auth_hint"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/btn_toggle_password"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_eye" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            style="@style/Widget.FoodPlanner.Button"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="20dp"
            android:text="@string/login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#4DFFFFFF" />

            <TextView
                style="@style/TextAppearance.FoodPlanner.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/or"
                android:textColor="@color/auth_hint" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#4DFFFFFF" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/btn_google"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/auth_input_bg"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:src="@drawable/world" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance.FoodPlanner.Body.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dont_t_have_an_account"
                android:textColor="@color/auth_hint" />

            <TextView
                android:id="@+id/btn_signup"
                style="@style/TextAppearance.FoodPlanner.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:text="@string/sign_up"
                android:textColor="@color/accent_color"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_guest"
            style="@style/TextAppearance.FoodPlanner.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_xlarge"
            android:clickable="true"
            android:focusable="true"
            android:letterSpacing="0.1"
            android:padding="8dp"
            android:text="@string/continue_as_guest"
            android:textAllCaps="true"
            android:textColor="@color/auth_hint" />

    </LinearLayout>

</RelativeLayout>