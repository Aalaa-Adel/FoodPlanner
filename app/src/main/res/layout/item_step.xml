<?xml version="1.0" encoding="utf-8"?>
<!-- item_step.xml - Single Cooking Step -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/card_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Step Number -->
        <androidx.cardview.widget.CardView
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/accent_light"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/tv_step_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1"
                android:textColor="@android:color/white"
                style="@style/TextAppearance.FoodPlanner.Body"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_black"/>
        </androidx.cardview.widget.CardView>

        <!-- Step Description -->
        <TextView
            android:id="@+id/tv_step_description"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Heat olive oil in a large pan over medium heat."
            style="@style/TextAppearance.FoodPlanner.Body"
            android:fontFamily="@font/nunito_regular"
            android:lineSpacingExtra="4dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>